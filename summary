    <script>
        // --- UTILITY: Wrap Labels for Chart.js ---
        const wrapLabel = (str, maxLen = 15) => {
            if (str.length <= maxLen) return str;
            const words = str.split(' ');
            const lines = [];
            let currentLine = words[0];
            for (let i = 1; i < words.length; i++) {
                if (currentLine.length + 1 + words[i].length <= maxLen) {
                    currentLine += " " + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        };

        // --- DATA ---
        const ageData = { labels: ["<30", "31-40", "41-50", "51-60", "61-65", ">65"], data: [24, 98, 128, 287, 202, 882] };
        const financeData = {
            depts: ["Bar", "Catering", "Sports", "Chambers", "Subscription"],
            gross: [92.13, 282.34, 28.92, 29.19, 56.55],
            net: [-7.45, 12.98, 2.98, 12.25, 56.55]
        };
        const categoryData = { labels: ["Corporate", "Life Member", "Regular Member"], data: [5, 556, 1060] };
        const spendData = {
            labels: ["0 (Inactive)", "<2.5k", "2.5k-5k", "5k-10k", "10k-25k", "25k-50k", ">50k"],
            data: [481, 268, 227, 284, 242, 81, 38]
        };
        const sportsRevData = {
            labels: ["Badminton", "Cards/Bridge", "Cricket", "Fitness", "Billiards", "Gym", "Tennis"],
            data: [10.47, 6.86, 4.52, 3.70, 1.86, 1.14, 0.37]
        };
        // Approximate age breakdown for stacked bar based on data analysis
        const activityStackData = {
            labels: ["Badminton", "Tennis", "Cards/Bridge"],
            under50: [10, 4, 1],
            mid5065: [29, 12, 6],
            over65: [54, 2, 80]
        };

        // --- CHARTS ---

        // 1. Age Chart (Bar)
        new Chart(document.getElementById('ageChart'), {
            type: 'bar',
            data: {
                labels: ageData.labels,
                datasets: [{
                    label: 'Members',
                    data: ageData.data,
                    backgroundColor: ['#93c5fd', '#60a5fa', '#3b82f6', '#2563eb', '#1d4ed8', '#dc2626'],
                    borderRadius: 6
                }]
            },
            options: {
                responsive: true, maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: { y: { beginAtZero: true, grid: { color: '#e2e8f0' } }, x: { grid: { display: false } } }
            }
        });

        // 2. Finance Chart (Plotly Grouped Bar)
        Plotly.newPlot('financePlotly', [
            { x: financeData.depts, y: financeData.gross, name: 'Gross Income', type: 'bar', marker: { color: '#93c5fd' }, text: financeData.gross.map(v => '‚Çπ'+v+'L'), textposition: 'auto' },
            { x: financeData.depts, y: financeData.net, name: 'Net Income', type: 'bar', marker: { color: financeData.net.map(v => v < 0 ? '#dc2626' : '#16a34a') }, text: financeData.net.map(v => '‚Çπ'+v+'L'), textposition: 'auto' }
        ], {
            barmode: 'group', margin: { t: 20, b: 40, l: 60, r: 20 },
            paper_bgcolor: 'rgba(0,0,0,0)', plot_bgcolor: 'rgba(0,0,0,0)',
            legend: { orientation: 'h', y: 1.1 }, font: { family: 'Inter, sans-serif', color: '#475569' },
            yaxis: { title: '‚Çπ Lakhs', gridcolor: '#e2e8f0' }
        }, { responsive: true, displayModeBar: false });

        // 3. Category Chart (Doughnut)
        new Chart(document.getElementById('categoryChart'), {
            type: 'doughnut',
            data: {
                labels: categoryData.labels,
                datasets: [{
                    data: categoryData.data,
                    backgroundColor: ['#f59e0b', '#16a34a', '#2563eb'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true, maintainAspectRatio: false,
                plugins: { legend: { position: 'bottom' } },
                cutout: '65%'
            }
        });

        // 4. Spend Chart (Horizontal Bar)
        new Chart(document.getElementById('spendChart'), {
            type: 'bar', indexAxis: 'y',
            data: {
                labels: spendData.labels,
                datasets: [{
                    label: 'Member Count',
                    data: spendData.data,
                    backgroundColor: (ctx) => ctx.dataIndex === 0 ? '#dc2626' : '#3b82f6',
                    borderRadius: 6
                }]
            },
            options: {
                responsive: true, maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: { x: { beginAtZero: true, grid: { color: '#e2e8f0' } }, y: { grid: { display: false } } }
            }
        });

        // 5. Sports Revenue Chart (Pie)
        new Chart(document.getElementById('sportsPie'), {
            type: 'pie',
            data: {
                labels: sportsRevData.labels,
                datasets: [{
                    data: sportsRevData.data,
                    backgroundColor: ['#2563eb', '#dc2626', '#16a34a', '#f59e0b', '#64748b', '#06b6d4', '#8b5cf6'],
                    borderWidth: 1, borderColor: '#fff'
                }]
            },
            options: {
                responsive: true, maintainAspectRatio: false,
                plugins: { legend: { position: 'right' } }
            }
        });

        // 6. Activity Stack Chart (Stacked Bar)
        new Chart(document.getElementById('activityStack'), {
            type: 'bar',
            data: {
                labels: activityStackData.labels,
                datasets: [
                    { label: '<50 Yrs', data: activityStackData.under50, backgroundColor: '#16a34a' },
                    { label: '50-65 Yrs', data: activityStackData.mid5065, backgroundColor: '#2563eb' },
                    { label: '>65 Yrs', data: activityStackData.over65, backgroundColor: '#dc2626' }
                ]
            },
            options: {
                responsive: true, maintainAspectRatio: false,
                plugins: { legend: { position: 'bottom' } },
                scales: { x: { stacked: true, grid: { display: false } }, y: { stacked: true, beginAtZero: true, grid: { color: '#e2e8f0' } } }
            }
        });
    </script>
</body>
